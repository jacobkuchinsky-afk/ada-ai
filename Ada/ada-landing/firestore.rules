rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - restrict what fields clients can write
    match /users/{userId} {
      // Anyone authenticated can read their own user document
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Only allow clients to update safe fields (displayName, lastCreditReset for daily refresh)
      // Sensitive fields (isPremium, credits, stripeCustomerId, stripeSubscriptionId, subscriptionStatus) 
      // are managed by the backend Admin SDK only
      allow update: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['displayName', 'lastCreditReset']);
      
      // Allow creating user docs but prevent setting sensitive fields
      allow create: if request.auth != null 
        && request.auth.uid == userId
        && !request.resource.data.keys().hasAny([
            'isPremium', 
            'credits', 
            'stripeCustomerId', 
            'stripeSubscriptionId',
            'subscriptionStatus',
            'premiumExpiresAt'
        ]);
    }
    
    // Users can access their own chat data
    match /users/{userId}/chats/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Waitlist collection - users can only read their own waitlist entry
    // Server-side (Admin SDK) handles all writes
    match /waitlist/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // No client writes allowed - managed by Admin SDK
    }
    
    // System stats - read-only for authenticated users (for showing waitlist info)
    match /system/{document} {
      allow read: if request.auth != null;
      // No client writes allowed - managed by Admin SDK
    }
  }
}
